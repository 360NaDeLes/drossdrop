@using Microsoft.AspNetCore.Http
@using DrossDrop.DTOs
@model IEnumerable<DrossDrop.DTOs.Product>

@inject IHttpContextAccessor httpContextAccessor

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string email = httpContextAccessor.HttpContext.Session.GetString("_Email");
}

@if (email != null)
{
    <h3>@email</h3>
}
else
{
    <h3>Welkom!</h3>
}

<p>
    <a asp-action="Create">Nieuw product aanmaken</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Product ID
            </th>
            <th>
                Product naam
            </th>
            <th>
                Product prijs
            </th>
            <th>
                Acties
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.productId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.productName)
                </td>
                <td>
                    €@Html.DisplayFor(modelItem => item.productPrice)
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.productId">Bewerken</a> |
                    <a asp-action="Delete" asp-route-id="@item.productId">Verwijderen</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <h3>@Html.DisplayFor(modelItem => item.productName)</h3>
            <p>€@Html.DisplayFor(modelItem => item.productPrice)</p>
        </div>
    }
</div>