@model IEnumerable<DrossDrop.DTOs.User>

@{
ViewData["Title"] = "Gebruikers";
Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Alle gebruikers</h3>

<p>
    <a asp-action="Create">Nieuwe gebruiker aanmaken</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Rol ID
            </th>
            <th>
                Voornaam
            </th>
            <th>
                Achternaam
            </th>
            <th>
                Email
            </th>
            <th>
                Acties
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.roleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.userId">Bewerken</a> |
                <a asp-action="Delete" asp-route-id="@item.userId">Verwijderen</a>
            </td>
        </tr>
        }
    </tbody>
</table>
